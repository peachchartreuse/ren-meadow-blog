---
import Layout from '../layouts/Layout.astro';
import galleryData from '../data/gallery.json';

const galleryImages = galleryData.images;
---

<Layout title="Ren Meadow - Photo Gallery" theme="grey-blue">
  <div class="gallery-container">
    <div class="gallery-scroll">
      {galleryImages.map((image, index) => (
        <div class={`gallery-item size-${image.size}`} data-index={index}>
          <img src={image.src} alt={image.alt} />
        </div>
      ))}
    </div>
  </div>

  <div id="lightbox" class="lightbox">
    <button class="lightbox-close">&times;</button>
    <div class="lightbox-content">
      <button class="lightbox-arrow lightbox-prev">&lt;</button>
      <img id="lightbox-image" src="" alt="" />
      <button class="lightbox-arrow lightbox-next">&gt;</button>
    </div>
    <div class="lightbox-caption">
      <span id="lightbox-text"></span>
    </div>
  </div>
</Layout>

<style>
  /* Override main padding for gallery page */
  :global(main) {
    padding: 0.5rem 0 !important;
    max-width: 100% !important;
  }

  .gallery-container {
    width: 100%;
    overflow-x: auto;
    overflow-y: hidden;
    padding: 0;
    height: calc(100vh - 180px); /* Fill most of viewport height */
    display: flex;
    align-items: center;
  }

  /* Hide scrollbar but keep functionality */
  .gallery-container::-webkit-scrollbar {
    height: 8px;
  }

  .gallery-container::-webkit-scrollbar-track {
    background: rgba(0, 0, 0, 0.1);
  }

  .gallery-container::-webkit-scrollbar-thumb {
    background: rgba(0, 0, 0, 0.3);
    border-radius: 4px;
  }

  .gallery-scroll {
    display: grid;
    grid-auto-flow: column;
    grid-template-rows: repeat(2, minmax(350px, 45vh));
    gap: 0.25rem;
    padding: 0 0.25rem;
    width: max-content;
    height: 100%;
  }

  .gallery-item {
    position: relative;
    overflow: hidden;
    cursor: pointer;
    background: #000;
  }

  /* Different sizes for masonry effect */
  .size-small {
    grid-row: span 1;
    width: 400px;
  }

  .size-medium {
    grid-row: span 1;
    width: 500px;
  }

  .size-large {
    grid-row: span 2;
    width: 550px;
  }

  .gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  /* Lightbox styles */
  .lightbox {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.95);
    z-index: 1000;
    align-items: center;
    justify-content: center;
  }

  .lightbox.active {
    display: flex;
    flex-direction: column;
  }

  .lightbox-close {
    position: absolute;
    top: 2rem;
    right: 2rem;
    background: none;
    border: none;
    color: white;
    font-size: 3rem;
    cursor: pointer;
    z-index: 1001;
  }

  .lightbox-content {
    position: relative;
    max-width: 90%;
    max-height: 80vh;
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  #lightbox-image {
    max-width: 100%;
    max-height: 80vh;
    object-fit: contain;
  }

  .lightbox-arrow {
    background: none;
    border: none;
    color: white;
    font-size: 3rem;
    cursor: pointer;
    padding: 1rem;
  }

  .lightbox-caption {
    color: white;
    text-align: center;
    margin-top: 1rem;
    font-size: 1.2rem;
  }

  @media (max-width: 768px) {
    .gallery-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  const galleryItems = document.querySelectorAll('.gallery-item');
  const lightbox = document.getElementById('lightbox');
  const lightboxImage = document.getElementById('lightbox-image');
  const lightboxText = document.getElementById('lightbox-text');
  const closeBtn = document.querySelector('.lightbox-close');
  const prevBtn = document.querySelector('.lightbox-prev');
  const nextBtn = document.querySelector('.lightbox-next');

  let currentIndex = 0;
  const images = JSON.parse(`${JSON.stringify(galleryImages.map(img => ({
    src: img.src.replace('?w=800', '?w=1200'),
    caption: `${img.caption} / ${img.date}`
  })))}`);

  function openLightbox(index) {
    currentIndex = index;
    lightboxImage.src = images[index].src;
    lightboxText.textContent = images[index].caption;
    lightbox.classList.add('active');
  }

  function closeLightbox() {
    lightbox.classList.remove('active');
  }

  function showNext() {
    currentIndex = (currentIndex + 1) % images.length;
    lightboxImage.src = images[currentIndex].src;
    lightboxText.textContent = images[currentIndex].caption;
  }

  function showPrev() {
    currentIndex = (currentIndex - 1 + images.length) % images.length;
    lightboxImage.src = images[currentIndex].src;
    lightboxText.textContent = images[currentIndex].caption;
  }

  galleryItems.forEach((item, index) => {
    item.addEventListener('click', () => openLightbox(index));
  });

  closeBtn?.addEventListener('click', closeLightbox);
  nextBtn?.addEventListener('click', showNext);
  prevBtn?.addEventListener('click', showPrev);

  lightbox?.addEventListener('click', (e) => {
    if (e.target === lightbox) closeLightbox();
  });

  document.addEventListener('keydown', (e) => {
    if (!lightbox.classList.contains('active')) return;
    if (e.key === 'Escape') closeLightbox();
    if (e.key === 'ArrowRight') showNext();
    if (e.key === 'ArrowLeft') showPrev();
  });
</script>