---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const allPosts = await getCollection('blog');
const tagPosts = allPosts
  .filter(post => post.data.tags.includes('media-reviews'))
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<Layout title="Media Reviews - Ren Meadow">
  <div class="archive-page">
    <h1 class="archive-title">Media Reviews</h1>
    
    <div class="posts-grid">
      {tagPosts.map(post => (
        <article class="post-card">
          <a href={`/blog/${post.slug}`}>
            {post.data.image && (
              <img src={post.data.image} alt={post.data.title} />
            )}
            <h2>{post.data.title}</h2>
            <p class="post-date">{post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: '2-digit', day: '2-digit' })}</p>
          </a>
        </article>
      ))}
    </div>
  </div>
</Layout>

<style>
  .archive-page {
    max-width: 1200px;
    margin: 0 auto;
  }

  .archive-title {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 3rem;
    font-weight: 600;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  .post-card {
    background: white;
    border-radius: 4px;
    overflow: hidden;
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0,0,0,0.1);
  }

  .post-card a {
    display: block;
  }

  .post-card img {
    width: 100%;
    height: 250px;
    object-fit: cover;
  }

  .post-card h2 {
    padding: 1rem 1.5rem 0.5rem;
    font-size: 1.5rem;
    font-weight: 600;
  }

  .post-date {
    padding: 0 1.5rem 1.5rem;
    color: var(--warm-brown);
    font-size: 0.95rem;
  }

  @media (max-width: 768px) {
    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>